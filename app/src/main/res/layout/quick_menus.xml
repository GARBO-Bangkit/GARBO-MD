<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="horizontal"
    android:gravity="center">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_columnWeight="1">

        <ImageView
            android:id="@+id/iv_upload_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/title_upload"
            android:src="@drawable/ic_baseline_photo_camera_24" />

        <TextView
            android:id="@+id/tv_upload_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            android:text="@string/title_upload"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_columnWeight="1">

        <ImageView
            android:id="@+id/iv_history_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/title_history"
            android:src="@drawable/ic_baseline_folder_24" />

        <TextView
            android:id="@+id/tv_history_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            android:text="@string/title_history"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_columnWeight="1">

        <ImageView
            android:id="@+id/iv_profile_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/title_profile"
            android:src="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/tv_profile_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            android:text="@string/title_profile"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_columnWeight="1">

        <ImageView
            android:id="@+id/iv_more_menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/title_more"
            android:src="@drawable/ic_baseline_more_horiz_24" />

        <TextView
            android:id="@+id/tv_more_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            android:text="@string/title_more"
            android:textAlignment="center" />
    </LinearLayout>

</GridLayout>